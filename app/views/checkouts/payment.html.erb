  <%= form_for @order, url: wizard_path, method: :put, class: 'max-600 mb-80' do |f| %>
    <%= f.simple_fields_for :credit_card_attributes do |sf| %>

<h3 class="general-subtitle">Credit Card</h3>
    <div class="<%= ('has-error' if @order.errors.messages[:base].each{|msg| msg}.join.include? "Number") %> form-group">
      <%= sf.label "Card number", class: "control-label input-label"  %>
      <%= sf.text_field :number, value: ( params[:order].nil? ? @order.try(:credit_card).try(:number) : params[:order][:credit_card_attributes][:number]), class: "form-control", placeholder: "Card Number.  Example: 5274 5763 9425 9961" %>
      <%= sf.hidden_field :user_id, value: current_user.id %>
      <%= sf.hidden_field :order_id, value: current_order.id %>
      <span class="help-block">
           <% @order.errors.messages[:base].each do |msg| %>
  <p> <%= msg if msg.include? "Number" %> </p>
     <% end %>
     </span>
      </div>

      <div class="row">
       <div class="col-sm-6">
    <div class="<%= ('has-error' if @order.errors.messages[:base].each{|msg| msg}.join.include? "First") %> form-group">
         <%= sf.label "Name on card", class: "control-label input-label"  %>
         <%= sf.text_field :first_name, value: ( params[:order].nil? ? @order.try(:credit_card).try(:first_name) : params[:order][:credit_card_attributes][:first_name]), class: "form-control", placeholder: "Name on card" %>
         <span class="help-block">
      <% @order.errors.messages[:base].each do |msg| %>
        <p> <%= msg if msg.include? "First" %> </p>
     <% end %>
     </span>
        </div>
       </div>
        <div class="col-sm-3">
    <div class="<%= ('has-error' if @order.errors.messages[:base].each{|msg| msg}.join.include? "Expiration") %> form-group">
         <%= sf.label "MM/YY", class: "control-label input-label"  %>
         <%= sf.text_field :expiration_date, value: ( params[:order].nil? ? @order.try(:credit_card).try(:expiration_date) : params[:order][:credit_card_attributes][:expiration_date]), class: "form-control", placeholder: "MM/YY" %>
                 <span class="help-block">
             <% @order.errors.messages[:base].each do |msg| %>
         <p> <%= msg if msg.include? "Expiration" %> </p>
          <% end %>
          </span>
        </div>
       </div>
        
        <div class="col-sm-3">
    <div class="<%= ('has-error' if @order.errors.messages[:base].each{|msg| msg}.join.include? "Cvv") %> form-group realitve">
         <%= sf.label "CVV", class: "control-label input-label"  %>
         <%= sf.text_field :cvv, value: ( params[:order].nil? ? @order.try(:credit_card).try(:cvv) : params[:order][:credit_card_attributes][:cvv]),class: "form-control", placeholder: "CVV" %>
             <span class="help-block">
             <% @order.errors.messages[:base].each do |msg| %>
  <p> <%= msg if msg.include? "Cvv" %> </p>
     <% end %>
     </span>
        </div>
        </div>
      </div>
    <% end %>
